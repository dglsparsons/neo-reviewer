{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "diagnostics": {
    "globals": ["vim", "describe", "it", "before_each", "after_each"],
    "disable": ["duplicate-set-field"],
    "neededFileStatus": {
      "type-check": "Any"
    }
  },
  "workspace": {
    "library": [
      "${3rd}/luv/library",
      "$VIMRUNTIME",
      "lua/stubs"
    ],
    "checkThirdParty": false,
    "ignoreDir": ["lua/stubs"]
  }
}
